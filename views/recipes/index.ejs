<!DOCTYPE html>

<html lang="en">
        <%- include ('../partials/head.ejs', {page: 'All recipe'}) %>
        <%- include ('../partials/nav.ejs') %>  
    <section class="hero is-medium has-background-light">
        <div class="hero-body">
            <p class="title"> وصفات  ام نور  </p>
        </div>
    </section>
    <main class="container is-max-widescreen">
        <div class="columns is-multiline p-5">
            <% for (let i= 0; i<recipe.length; i++){ %> 
                <% const rec= recipe[i] %>
                <div class="column is-one-third">
                    <article class="card">
                        <section class="card-image">
                            <a href="/recipes/<%= rec.id %>">
                                <figure class="image is-3by3">
                                    <img src="<%= rec.image %>" alt="Placeholder image"/>

                                </figure>
                            </a>
                            </div>
                        </section>
                        <div class="card-content">
                            <div class="content">
                                <h3>
                                    <a href="/recipes/<%= rec.id %>"><%= rec.name %></a>
                                </h3>
                                <hr/>
                                <p>$<%= rec.price %></p>
                            </div>
                        </div>
                    </article>
                </div>
            <% }  %>      
        </div>
    </main>
</body>
</html>
