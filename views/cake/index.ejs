<!DOCTYPE html>

<html lang="en">
        <%- include ('../partials/head.ejs', {page: 'All artist'}) %>
        <%- include ('../partials/nav.ejs') %>  
    <section class="hero is-medium has-background-light">
        <div class="hero-body">
            <p class="title"> مطبخ ام نور للحلويات  </p>
        </div>
    </section>

    <main class="container is-max-widescreen">
        <div class="columns is-multiline p-5">
            <% for (let idx =0; idx<cake.length; idx++){ %> <% 
                const gateau = cake[idx] %>
                    <div class="column is-one-third">
                        <article class="card">
                            <section class="card-image">
                                <a href="/cake/<%= gateau.id%>" >
                                <figure class="image is-3by3">
                                        <img src="<%= gateau.image%> " alt="Placeholder image" />
                                    </figure>
                                </a>
                        </div>
                    </section>
                            <div class="card-content">
                                <div class="content">
                                    <h3>
                                        <a href="/cake/<%= gateau.id%>" ><%= gateau.name %> </a>
                                    </h3>
                                    <p>$<%= gateau.price%></p>
                                </div>
                            </div>
                    </article>
                </div>
            <% } %>           
        </div>
    </main>
</body>
</html>
