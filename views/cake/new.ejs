                            <input type="texterea" class="text-center" placeholder="وصف" name="description" col="30" rows="5"/>
                        </div>
                        <div class="form-item">
                            <label for="ing-list" class="label text-center">المكونات:</label>
                            <input type="texterea" class="text-center" placeholder="المكونات" name="ingredients" col="30" rows="10"/>
                        </div>
                        <div class="form-col">
                            <div class="form-row">
                                <div class="form-item">
                                    <label class="label text-center">Prep Time</label>
                                    <input for="time_input" class="text-center" placeholder="prep-time" type="text"/>
                                </div>
                                <div class="form-item">
                                    <label class="label text-center">Cooking Time</label>
                                    <input for="time_input" class="text-center" placeholder="cooking-time" type="text"/>
                                </div>
                                <div class="form-item">
                                    <label for="direction" class="label text-center">Direction</label>
                                    <input type="textarea" class="text-center" placeholder="direction" name="deriction" row="10"/>
                                </div>
                                <div class="form-item">
                                    <label for="cook-tips" class="label text-center">Cooking Tips</label>
                                    <input type="textarea" class="text-center" placeholder="cooking tips" name="cook-tips" rows="5"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-info">اضف</button>
                    </div>
                </div>
            </form>
